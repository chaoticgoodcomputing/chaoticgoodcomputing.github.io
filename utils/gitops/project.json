{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "git",
  "root": "utils/gitops",
  "projectType": "library",
  "targets": {
    "commit": {
      "//": "Commit changes to both main repo and private submodule with synchronized commit messages. Usage: nx run git:commit \"message\"",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash utils/gitops/commit.sh {args._}"
        ],
        "parallel": false,
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": [ "workspace:precommit" ]
    },
    "push": {
      "//": "Push both repositories (submodule first, then main repo)",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash utils/gitops/push.sh"
        ],
        "parallel": false,
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
