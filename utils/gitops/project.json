{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "git",
  "root": "utils/gitops",
  "projectType": "library",
  "targets": {
    "commit": {
      "//": "Commit changes to both main repo and private submodule with synchronized commit messages. e.g. (`git commit '<message>'`)",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash commit.sh"
        ],
        "parallel": false,
        "cwd": "utils/gitops"
      },
      "dependsOn": [ "vault:extract" ]
    },
    "push": {
      "//": "Push both repositories (submodule first, then main repo)",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash push.sh"
        ],
        "parallel": false,
        "cwd": "utils/gitops"
      }
    }
  }
}
